    </target>
    <!-- ================================================================== -->
    <target name="commons-lang">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/commons-lang-2.4.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="idea-annotations">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/annotations.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="jcip-annotations">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/jcip-annotations.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="mac-widgets"
            depends="forms">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/mac_widgets-0.9.5.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="sys">

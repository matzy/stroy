    </target>
    <!-- ================================================================== -->
    <target name="mac-widgets"
            depends="jgoodies-forms">
        <copy todir="${dependencies.basedir}/build/libs"
              file="${dependencies.basedir}/external/production/mac_widgets-0.9.5.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="muchsoft-sys">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/Sys.jar"/>

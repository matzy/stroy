<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="dependencies" default="depend.all">
    <dirname property="dependencies.basedir" file="${ant.file.dependencies}"/>
    <!-- ================================================================== -->
    <target name="depend.all"
            depends="depend.fausterize">
    </target>
    <!-- ================================================================== -->
    <target name="depend.fausterize"
            depends="depend.lang, depend.localization, depend.io, depend.application, depend.ui, designgridlayout, guice, mac-widgets">
        <ant dir="${dependencies.basedir}/modules/fausterize" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.ui"
            depends="depend.lang, depend.localization, depend.application, designgridlayout">
        <ant dir="${dependencies.basedir}/modules/ui" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.application"
            depends="depend.lang, depend.localization, depend.io, xstream, jcip-annotations, annotations, commons-io">
        <ant dir="${dependencies.basedir}/modules/application" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.io"
            depends="commons-lang, sys">
        <ant dir="${dependencies.basedir}/modules/io" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.localization" >
        <ant dir="${dependencies.basedir}/modules/localization" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.lang"
            depends="guice">
        <ant dir="${dependencies.basedir}/modules/lang" inheritAll="false"/>
    </target>

    <!-- ================================================================== -->

    <!--     external library dependencies       --> 

    <!-- ================================================================== -->
    <target name="designgridlayout"
            depends="swinglayout">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/designgridlayout-0.9.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="swinglayout">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/swing-layout-1.0.2.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="guice">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/guice-2.0.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="commons-lang">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/commons-lang-2.4.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="annotations">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/annotations.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="jcip-annotations">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/jcip-annotations.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="mac-widgets"
            depends="forms">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/mac_widgets-0.9.5.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="sys">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/Sys.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="xstream">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/xstream-1.3.1.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="forms">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/forms-1.2.1.jar"/>
    </target>
    <!-- ================================================================== -->
    <target name="commons-io">
        <copy todir="${dependencies.basedir}/build/libs" file="${dependencies.basedir}/external/production/commons-io-1.4.jar"/>
    </target>
</project>
<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="dependencies" default="depend.all">
    <dirname property="dependencies.basedir" file="${ant.file.dependencies}"/>
    <!-- ================================================================== -->
    <target name="depend.all"
            depends="depend.fausterize, depend.legacy">
    </target>
    <!-- ================================================================== -->
    <target name="depend.legacy"
            depends="depend.lang, depend.localization, depend.io, depend.application, depend.ui, depend.vfs, designgridlayout, guice, mydoggy-api, mydoggy-plaf, swingworker, jdic">
        <ant dir="${dependencies.basedir}/modules/legacy" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.fausterize"
            depends="depend.lang, depend.localization, depend.io, depend.application, depend.ui, designgridlayout, guice, mac-widgets">
        <ant dir="${dependencies.basedir}/modules/fausterize" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.ui"
            depends="depend.lang, depend.localization, depend.application, depend.io, designgridlayout, guice, preferencePanel, jgoodies-binding">
        <ant dir="${dependencies.basedir}/modules/ui" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.application"
            depends="depend.lang, depend.localization, depend.io, xstream, jcip-annotations, idea-annotations, commons-io">
        <ant dir="${dependencies.basedir}/modules/application" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.io"
            depends="commons-lang, sys">
        <ant dir="${dependencies.basedir}/modules/io" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.localization"
            depends="depend.property">
        <ant dir="${dependencies.basedir}/modules/localization" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.vfs" >
        <ant dir="${dependencies.basedir}/modules/vfs" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.property"
            depends= "depend.lang, commons-io, guice, idea-annotations, xstream">
        <ant dir="${dependencies.basedir}/modules/property" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.lang"
            depends="guice">
        <ant dir="${dependencies.basedir}/modules/lang" inheritAll="false"/>
    </target>

    <!-- ================================================================== -->

    <!--     external library dependencies       --> 

    <!-- ================================================================== -->
    <target name="designgridlayout"
